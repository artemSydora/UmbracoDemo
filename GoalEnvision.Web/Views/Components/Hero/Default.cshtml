@model GoalEnvision.Web.Features.Components.Hero.HeroViewModel
@if (Model != null)
{
    <section class="section section--full-height background-image-full overlay overlay--dark section--content-center section--thick-border">
        <div class="section__hero-content">
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h1>@Model.Title</h1>
            }
            @if (!string.IsNullOrEmpty(Model.Subtitle))
            {
                <p class="section__description">@Model.Subtitle</p>
            }
        </div>
    </section>
}