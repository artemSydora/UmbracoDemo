@inherits UmbracoViewPage<BlockListItem<ProfessorBlock>>

@{
    var content = Model.Content;
}

@if (content != null)
{
<div class="container-fluid @Model.Content.BackgroundColor">
    <div class="container  pt-5" data-aos="fade-up">
        <div class="row p-0 m-0">
            <div class="col-lg-4 d-flex align-self-end justify-content-center" data-aos="fade-left" data-aos-delay="100">
                @if (content.Image != null)
                {
                    <img src="@content.Image.Url()" class="" alt="">
                }
            </div>
            <div class="col-lg-4 pt-lg-0" data-aos="fade-right" data-aos-delay="100">
                <h6>@content.Subtitle</h6>
                <h3>@content.Title</h3>
                <p>@content.Description</p>
                @if (content.Button != null)
                {
                    <div class="mt-2">
                        <a class="btn btn-primary" href="@content.Button.Url">@content.Button.Name</a>
                    </div>
                }
                @if (content.Link != null)
                {
                    <div class="mt-2">
                        <a href="@content.Link.Url">@content.Link.Name</a>
                    </div>
                }
            </div>
            @if (!String.IsNullOrWhiteSpace(content.ListTitle) && content.ListItems?.Count() != null)
            {
                <div class="col-lg-4 pt-lg-0" data-aos="fade-right" data-aos-delay="100">
                    <h3>@content.ListTitle</h3>
                    <ul>
                        @foreach (var listItem in content.ListItems)
                        {
                            <li><i class="ri-check-double-line"></i>@listItem</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
}
